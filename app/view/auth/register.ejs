<link rel="stylesheet" type="text/css" href="/assets/css/auth.css" />
<link rel="stylesheet" type="text/css" href="/assets/css/util.css" />


<body>
	<div class="limiter">
		<div class="container-login100 bg-auth">
			<div class="wrap-login100 p-t-30 p-b-50">
				<span class="login100-form-title p-b-41">Register</span>
				<%- include('../partials/messages') %>
				<form class="login100-form validate-form p-b-33 p-t-5" action="/auth/register" method="POST">
					<div class="wrap-input100 validate-input" data-validate="Enter firstname">
						<input type="text" class="input100" name="first_name" id="first_name"  placeholder="first name" value="<%= typeof first_name!='undefined' ?first_name:'' %>"/>
						<span class="focus-input100" data-placeholder="&#xe82a;"></span>
					</div>
					<div class="wrap-input100 validate-input" data-validate="Enter lastname">
						<input type="text" class="input100" name="last_name" id="last_name"  placeholder="last name" value="<%= typeof last_name !='undefined'?last_name:'' %>"/>
						<span class="focus-input100" data-placeholder="&#xe82a;"></span>
					</div>
					<div class="wrap-input100 validate-input" data-validate="Enter email">
						<input type="email" class="input100" name="email" id="email" placeholder="email" value="<%= typeof email !='undefined'?email:'' %>" />
						<span class="focus-input100" data-placeholder="&#xe818;"></span>
					</div>
					<div class="wrap-input100 validate-input" data-validate="Enter password">
						<input type="password" class="input100" name="password" id="password"  placeholder="password" value="<%= typeof password !='undefined'?password:'' %>"/>
						<span class="focus-input100" data-placeholder="&#xe80f;"></span>
					</div>
					<div class="wrap-input100 validate-input" data-validate="Confirm password">
						<input type="password" class="input100" name="confpass" id="confpass"  placeholder="confirm password" value="<%= typeof confpass !='undefined'?confpass:'' %>"/>
						<span class="focus-input100" data-placeholder="&#xe80f;"></span>
					</div>
					<div class="wrap-input100 validate-input">
		
						<%- recaptcha %>
			
		
					</div>
					<div class="container-login100-form-btn m-t-32">
						<button type="submit" class="login100-form-btn">Register</button>
					</div>
					<div class="login110-form p-b-33 p-t-5 mt-4">
						<p class="mt-3">
							Have a account?
							<a href="/auth/login">Login</a>
						</p>
					</div>
				</form>
		
			</div>
		</div>
		</div>
		<div id="dropDownSelect1"></div>
		<script src="/assets/js/jquery-3.2.1.min.js"></script>
		<script src="/assets/js/auth.js"></script>
	</body>
</html>
